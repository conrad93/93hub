<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="<%= data.first_name %> <%= data.last_name %>">
    <meta name="keywords" content="Resume Portfolio">
    <meta name="description" content="<%= data.template_data?.meta_description %>">
    <title><%= data.template_data?.page_title %></title> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>
  <body>
    <% convertDate = function(string){
      let date = new Date(string);
      let options = { year: 'numeric', month: 'short' };
      return date.toLocaleString('en-US', options);
    } %>
    <main data-bs-spy="scroll" data-bs-target=".navbar" data-bs-smooth-scroll="true">
      <header class="fixed-top">
        <nav class="navbar navbar-expand-lg bg-light">
          <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
              <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link" href="#home">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#about">About</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#info">Info</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </header>
      <section class="bg-light" id="home">
        <div class="container py-5">
          <div class="row py-5">
            <div class="col-md-6 col-sm-12 pt-3 ps-5">
              <span class="badge rounded-pill bg-primary p-2"><b>Hello I'm</b></span>
              <h1 class="display-1"><%= data.first_name %> <strong><%= data.last_name %></strong></h1>
              <h6 class="display-6"><%= data.title %></h6>
              <ul class="list-unstyled">
                <li>
                  <span class="pe-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                      <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z"/>
                    </svg>
                  </span>
                  <%= data.email %>
                </li>
                <li>
                  <span class="pe-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                      <path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                    </svg>                    
                  </span>
                  <%= data.isd ? "+" + data.isd : '' %><%= data.phone_no ? '-' + data.phone_no : '' %>
                </li>
                <li>
                  <span class="pe-1">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                      <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                    </svg>                    
                  </span>
                  <%= data.address %><%= data.city ? ", " + data.city : "" %><%= data.country ? (data.address || data.city ? ", " + data.country : data.country) : "" %>
                </li>
              </ul>
              <% if(data.facebook_link || data.twitter_link || data.github_link || data.linkedin_link){ %>
                <ul class="list-inline">
                    <% if(data.facebook_link){ %>
                        <li class="list-inline-item">
                        <a class="btn btn-outline-dark" href="<%= data.facebook_link %>" role="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                            <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                            </svg>
                        </a>
                        </li>
                    <% } %>
                    <% if(data.twitter_link){ %>
                        <li class="list-inline-item">
                        <a class="btn btn-outline-dark" href="<%= data.twitter_link %>" role="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                            <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                            </svg>
                        </a>
                        </li>
                    <% } %>
                    <% if(data.github_link){ %>
                        <li class="list-inline-item">
                        <a class="btn btn-outline-dark" href="<%= data.github_link %>" role="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-github" viewBox="0 0 16 16">
                            <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                            </svg>
                        </a>
                        </li>
                    <% } %>
                    <% if(data.linkedin_link){ %>
                        <li class="list-inline-item">
                        <a class="btn btn-outline-dark" href="<%= data.linkedin_link %>" role="button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                            <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                            </svg>
                        </a>
                        </li>
                    <% } %>
                </ul>
              <% } %>          
            </div>
            <div class="col-md-6 pt-3 d-none d-md-flex justify-content-center align-items-center">
              <img style="height: 175px; width: 160px;" src="<%= data.profile_pic ? (data.profile_pic.includes('http') ? data.profile_pic : (data.host + data.folderPath + data.profile_pic)) : '' %>" class="img-thumbnail shadow-lg" alt="<%= data.first_name %> <%= data.last_name %>">
            </div>
          </div>
        </div>
      </section>
      <section class="bg-white" id="about">
        <div class="container py-5">
          <div class="row py-5">
            <div class="col-12 d-flex justify-content-center align-items-center flex-column px-3">
              <h3 class="display-3 text-primary">About Me</h3>
              <p class="lead">
                <%= data.about_me %>
              </p>
              <% if(data.skills_array && data.skills_array.length){ %>
                <ul class="list-inline">
                  <% for(var i = 0; i < data.skills_array.length; i++){ %>
                    <li class="list-inline-item m-2"><span class="border border-primary p-1"><b><%= data.skills_array[i].name %></b></span></li>
                  <% } %>
                </ul>
              <% } %>
              <% if(data.resume){ %>
                <a class="btn btn-primary" href="<%= data.resume.includes('http') ? data.resume : (data.host + data.folderPath + data.resume) %>" role="button" download>
                  Download CV
                </a>
              <% } %>
            </div>
          </div>
        </div>
      </section>
      <section class="bg-light" id="info">
        <div class="container py-5">
          <div class="row py-5">
            <% if(data.education_array && data.education_array.length){ %>
              <div class="col-md-6 px-3">
                <h6 class="display-6"><b>Education</b></h6>
                <% for(var i = data.education_array.length - 1; i >= 0; i--){ %>
                  <div class="card my-3">
                    <div class="card-body">
                      <h5 class="card-title"><%= data.education_array[i].course_name %><%= data.education_array[i].institute_name ? " From " : "" %><em class="text-primary"><%= data.education_array[i].institute_name %></em></h5>
                      <h6 class="card-subtitle mb-2 text-primary"><%= data.education_array[i].from_year %><%= data.education_array[i].to_year ? "-" + data.education_array[i].to_year : "" %></h6>
                      <p class="card-text"><%= data.education_array[i].description %></p>
                    </div>
                  </div>
                <% } %>
              </div>
            <% } %>
            <% if(data.experience_array && data.experience_array.length){ %>
              <div class="col-md-6 px-3">
                <h6 class="display-6"><b>Experience</b></h6>
                <% for(var i = data.experience_array.length - 1; i >= 0; i--){ %>
                  <div class="card my-3">
                    <div class="card-body">
                      <h5 class="card-title"><%= data.experience_array[i].title %> <em class="text-primary"><%= data.experience_array[i].company_name %></em></h5>
                      <h6 class="card-subtitle mb-2 text-primary"><%= convertDate(data.experience_array[i].from) %><%= data.experience_array[i].employed ? " - Present" : (data.experience_array[i].to ? " - " + convertDate(data.experience_array[i].to) : "") %></h6>
                      <% if(data.experience_array[i].responsibility && data.experience_array[i].responsibility.length){ %>
                        Responsibility :
                        <ul>
                          <% for(var j = 0; j < data.experience_array[i].responsibility.length; j++){ %>
                            <li><%= data.experience_array[i].responsibility[j].name %></li>
                          <% } %>
                        </ul>
                      <% } %>
                    </div>
                  </div>
                <% } %>
              </div>
            <% } %>
          </div>
        </div>
      </section>
      <footer class="d-flex justify-content-center align-items-center p-3">
        <b>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-c-circle" viewBox="0 0 16 16">
            <path d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0ZM8.146 4.992c-1.212 0-1.927.92-1.927 2.502v1.06c0 1.571.703 2.462 1.927 2.462.979 0 1.641-.586 1.729-1.418h1.295v.093c-.1 1.448-1.354 2.467-3.03 2.467-2.091 0-3.269-1.336-3.269-3.603V7.482c0-2.261 1.201-3.638 3.27-3.638 1.681 0 2.935 1.054 3.029 2.572v.088H9.875c-.088-.879-.768-1.512-1.729-1.512Z"/>
          </svg>
          &nbsp;2023 Copyright: 93hub.com
        </b>
      </footer>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script>
      const scrollSpy = new bootstrap.ScrollSpy(document.body, {
        target: '.navbar'
      });
    </script>
  </body>
</html>